<br>
<br>

<%= form_for @zat , url: {action: "update"} do |f| %>
<%= f.label 'Recording Session Date' %><br>
<%= f.text_field :appointment_date %><br>


<%= f.label 'Recording Session Location' %><br>
<%= f.text_field :studio_id %><br>

<%= f.label 'Recording Session Engineer' %><br>
<%= f.text_field :engineer_id %><br>


<%= f.label 'Recording Session Artist' %><br>
<%= f.text_field :artist_id %><br>

<%= f.submit "Update" %>
<% end %>
<br>
<br>
<br>
-----------------------------------------------------------------------------------------------------------------------------------------------------------




<br>
<br>
<%= form_tag zats_path do %>
<label>recording session date:</label><br>
<br>
<%= text_field_tag :appointment_date %><br>
<label>recording session location</label><br>
<br>
<%= text_field :name, :class => "edit-recording-session", :placeholder => "create new recording session..." %>
<br>
<br>
 <%= text_area_tag :artist_id %><br>
<br>
<%= submit_tag "Create" %>
<% end %>




<br>





