


<% if @zats.blank? %>
<h2>There are currently no recording sessions scheduled.</h2>
<% else %>
<h2>Current recording sessions.</h2>
<br>
<ol id="zats">
    <% @zats.each do |c| %>
    <li> Studio: <%=c.studio.name.capitalize%> ***
         Engineer: <%=c.engineer.name.capitalize%> ***
         Artist: <%=c.artist.name.capitalize%> ***
         Date: <%= c.appointment_date %>
          <% if c.status == false %>
          Status: session scheduled
          <% else %>
          Status: session complete
            <% end %>
<br>
<br>
    </li>
    <% end %>
    <% end %>

</ol>

<ol>
<li>

        <% Zat.all.each do |c| %>
        <% if c.incomplete? %>
       <li> <% c.appointment_date %> </li>
        Status: session scheduled 
        <% else %>
       <li> Status: session complete </li>
        <% end %>
        <% end %>
</li>



</ol>



-----------------------------------------------------------------------------------------------------------------------------------------------------------

<%= form_for :zat do |f| %>
<h2>Create a new recording session!</h2>
<br>
<h3>Please select from the dropdowns below to create your new recording session:</h3>



<%= select("post", "studio_id", @studios.collect {|p| [ p.name, p.id ] }, {prompt: 'Book a Studio...'}) %>

<br>

<h5>
    <%= select("post", "zat_id", @zats.collect {|p| [ p.appointment_date ] }, {prompt: 'Select a date and time for your recording session:'}) %>
    
    <br>
    <br>
<%= select("post", "engineer_id", @engineers.collect {|p| [ p.name, p.id ] }, {prompt: 'Assign an Engineer...'}) %>

<br>
<br>

<%= select("post", "artist_id", @artists.collect {|p| [ p.name, p.id ] }, {prompt: 'Select an Artist...'}) %>

<br>
<br>
<%= f.submit %>
<% end %>
<br>
<br>


