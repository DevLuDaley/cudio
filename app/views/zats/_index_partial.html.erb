

<!-- USED in views/zats/index -->

<!-- EDIT FORM -->
    <!-- DISPLAY Zat.ALL -->
    <section class="main">
    
        <% if @zats.blank? %>
        <h2>There are currently no recording sessions scheduled.</h2>
        <% else %>
        <h2>Scheduled Recording Sessions</h1>
            <br>
    
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Engineer</th>
                        <th>Artist</th>
                        <th>Studio</th>
                        <th>Location</th>
                        <th>Recording Session Date</th>
                        <th>Complete</th>
                        <th>Cancel</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
    
                <% @zats.each do |c| %>
<div class="well">
                <tbody>
                    <tr>
                        <td><a href="/engineers/@engineer_id page/:id"><%= c.id %></a></td>
                        <td><a href="/engineers/@engineer_id page/:id"><%= c.engineer.name.capitalize %></a></td>
                        <td><a href="/artists/:artist_id"><%= c.artist.name.capitalize %></a></td>
                        <td><a href="/studios/@studios_path"><%= c.studio.name.capitalize %></a></td>
                        <td><a href="/studios/@studios_path"><%= c.studio.location.capitalize %></a></td>
                        <td><a href="/zats/"><%= c.appointment_date.time.to_formatted_s(:rfc822) %></a></td>
                        <td><a href="/studios/@studios_path"><%= c.status %></a></td>
                        <td><a href="/zats/@engineer_id"><%= link_to "Delete", c, method: :delete, data: { confirm: 'Are you sure you want to delete this recording session?' } %></a></td>

                    </tr>

                    <% end %>
                </tbody>
            </table>
            <%= link_to "LINK to ALL SESSIONS via (index_partial) ", zats_path(@zat), :class => 'btn btn-default' %>
</div>
            <p> <% end %> </p>

    <!-- END OF EDIT FORM -->