

<!-- USED in views/zats/index -->

<!-- EDIT FORM -->
    <!-- DISPLAY Zat.ALL -->
    

<div>
    <h2> Engineer Information </h2>
    <h3> Engineer: <%= @engineer.name.capitalize %></h3>
            <% if @engineer.zats.blank? %>
    <h2>There are currently no recording sessions scheduled.</h2>
               <% else %>
    <h2><%= link_to @engineer.name.capitalize, engineer_path(@engineer)%>'s Scheduled Recording Sessions</h2>
        <!-- <br> -->
    
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Artist</th>
                    <th>Studio</th>
                    <th>Location</th>
                    <th>Recording Session Date</th>
                    <th>Complete</th>
                    <th>Cancel</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
    
            <% @engineer.zats.each do |c| %>
            <div class="well">
                <tbody>
                    <tr>
                        <td><%= link_to c.id, zat_path(c)%></td>
                        <td><%= link_to c.artist.name, artist_path(c.artist)%></td>
                        <td><%= link_to c.studio.name.capitalize, studio_path(c.studio)%></td>
                        <td><%= link_to c.studio.location.capitalize, studio_path(c.studio)%></td>
                        <td><%= link_to c.appointment_date.time.to_formatted_s(:rfc822), zat_path(c)%></td>
                        <td><%= c.status %></td>
                        <td><%= link_to "Delete", c, method: :delete, data: { confirm: 'Are you sure you want to delete this recording session?' } %>
                        </td>
    
                    </tr>
    
                    <% end %>
                    <% end %>
                    <!-- END OF EDIT FORM -->


    <!-- END OF EDIT FORM -->