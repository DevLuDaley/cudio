

<!-- USED in views/zats/index -->

<!-- EDIT FORM -->
    <!-- DISPLAY Zat.ALL -->
    <section class="main">
    
        <% if @studios.blank? %>
        <h2>There are currently no recording sessions scheduled.</h2>
        <% else %>
        <h2>Recording Studios</h1>
            <br>
    
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Studio</th>
                        <th>Location</th>
                        <th>Sessions</th>
                        <th>Complete</th>
                        <th>Cancel</th>
                        <th>Artist</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
    
                <% @studios.each do |c| %>
                <tbody>
                    <tr>
                        <td><a href="/engineers/@engineer_id page/:id"><%= c.id %></a></td>
                        <td><a href="/studios/:id"><%= c.name.capitalize %></a></td>
                        <td><a href="/artists/:artist_id"><%= c.location.capitalize %></a></td>
                        <td><a href="/artists/:artist_id"><%= c.zats.count %></a></td>
                    
                        <td><a href="/zats/@engineer_id"><%= link_to "Delete", c, method: :delete, data: { confirm: 'Are you sure you want to delete this recording session?' } %></a></td>

                    </tr>
                    <% end %>
                </tbody>
            </table>
    
            <p> <% end %> </p>

    <!-- END OF EDIT FORM -->